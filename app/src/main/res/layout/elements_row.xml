<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageRow"
        android:layout_width="417dp"
        android:layout_height="286dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/textRow"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:textSize="32sp"
        android:textColor="@color/black"
        android:alpha="0.4"
        android:background="#B5D5BC"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/imageRow"
        app:layout_constraintEnd_toEndOf="@+id/imageRow"
        app:layout_constraintStart_toStartOf="@+id/imageRow"
        app:layout_constraintTop_toTopOf="@+id/imageRow" />

</androidx.constraintlayout.widget.ConstraintLayout>